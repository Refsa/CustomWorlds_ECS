/*
    COLORS:

    F7EFCA
    CEC490
    6F845D
    274754
    192B35
*/

.FlexTemplateContainer {
    width: 100%;
    height: 100%;

    display: flex;
    flex-direction: row;
}

#SetupBootstrap {
    margin: auto;
    width: 30%;
    height: 10%;
}

#SimpleLabel {
    width: 100%;
    height: 25px;
    background-color: #192B35;
    align-items: center;

    border-bottom-width: 1px;
    border-color: #6F845D;

    flex-shrink: 0;
}

#SimpleLabel Label {
    font-size: 15px;
    color: #F7EFCA;
}



#TitleBar {
    height: 30px;
    width: auto;
    background-color: #192B35;
    display: flex;
    align-items: center;

    border-bottom-width: 1px;
    border-color: #6F845D;

    flex-shrink: 0;
}

#TitleBar Label {
    font-size: 20px;
    color: #F7EFCA;
}



#MainContainer {
    background-color: #274754;
    width: auto;
    height: 100%;
    display: flex;
    flex-direction: row;
}



#LeftContainer {
    background-color: #274754;
    width: 50%;
    height: 100%;

    border-right-width: 1px;
    border-color: #6F845D;
}

#AddNewWorldContainer {
    height: 10%;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
}

#ExistingWorldsContainer {
    height: 90%;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
}

#WorldTypeContainer {
    display: inline;
}

#WorldTypeInnerContainer {
    display: inline;
}

#WorldTypeContainerTitle { 
    display: flex;
    flex-direction: row;
    height: 20px;
    background-color: #192B35;

    border-bottom-width: 1px;
    border-color: #6F845D;
    flex-shrink: 0;
}

#WorldTypeContainerTitle Label {
    color: #F7EFCA;
}

.WorldName {
    width: 33%;
    margin-left: 2px;
    border-right-width: 1px;
    border-color: #F7EFCA;
}

.WorldClass {
    width: 60%;
}

.WorldRemove {
    width: 5%;
}

#AddWorldContainer {
    flex-shrink: 0;
    margin-top: 2%;
    margin-bottom: 2%;
    display: flex;
    flex-direction: row;
}

#AddWorldContainer TextField {
    margin-left: 5%;
    width: 65%;
}

#AddWorldContainer Button {
    position: absolute;
    right: 5%;
    width: 20%;
}

.WorldTypeView {
    background-color: #CEC490;
    display: flex;
    flex-direction: row;

    border-bottom-width: 1px;
    border-color: #6F845D;
}



#RightContainer {
    background-color: #274754;
    width: 50%;
    height: 100%;
    display: flex;

    border-left-width: 1px;
    border-color: #6F845D;
}

#SystemInfoTitle {
    display: flex;
    flex-direction: row;
    height: 20px;
    background-color: #192B35;

    border-bottom-width: 1px;
    border-color: #6F845D;

    flex-shrink: 0;
}

#SystemInfoTitle Label {
    align-self: center;
    color: #F7EFCA;
    font-size: 12px;
    width: 50%;
    margin-left: 2px;
}

.WorldTypeEnum {
    width: 50%;
    border-right-width: 1px;
    border-color: #F7EFCA;
}

.SystemName {
    width: 50%;
}

